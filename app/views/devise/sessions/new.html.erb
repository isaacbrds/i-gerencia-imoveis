<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" , class: 'form-control mt-2 mb-2' } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: 'form-control mt-2 mb-2' } %>
    <%= f.input :remember_me, input_html: { class: 'form-check-input ' }, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions mt-3">
    <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
