<%= simple_form_for [:admin, @property_situation] do |form| %>
  <%= render(CardComponent.new(title: resource_form_title)) do |component| %>
    <%= form.input :name, input_html: { class: 'form-control mt-2 mb-2' } %>

    <% component.with_footer do %>
      <%= form.button :button %>
    <% end %>
  <% end %>
<% end %>