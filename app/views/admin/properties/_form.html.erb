<%= simple_form_for [:admin, @property] do |form| %>
  <%= render(CardComponent.new(title: resource_form_title)) do |component| %>
    <div class="row">
      <div class="col-12 col-md-4">
        <%= form.input :address_zip_code, input_html: { class: 'form-control mt-2 mb-3' } %>
      </div>
    </div>

    <div class="row">
      <div class="col-12 col-md-6 col-lg-4">
        <%= form.input :address_state, input_html: { class: 'form-control mt-2 mb-3' } %>
      </div>
      <div class="col-12 col-md-6 col-lg-4">
        <%= form.input :address_city, input_html: { class: 'form-control mt-2 mb-3' } %>
      </div>
      <div class="col-12 col-md-6 col-lg-4">
        <%= form.input :address_neighborhood, input_html: { class: 'form-control mt-2 mb-3' } %>
      </div>
    </div>

    <div class="row">
      <div class="col-12 col-md-9">
        <%= form.input :address_line_1, input_html: { class: 'form-control mt-2 mb-3' } %>
      </div>
      <div class="col-12 col-md-3">
        <%= form.input :address_number, input_html: { class: 'form-control mt-2 mb-3' } %>
      </div>
    </div>
<%= form.input :title, input_html: { class: 'form-control mt-2 mb-3' } %>
    <%= form.input :description do %>
      <%= form.rich_text_area :description %>
    <% end %>

    <div class="row">
      <div class="col-12 col-md-6 col-lg-3">
        <%= form.input :size, input_html: { class: 'form-control mt-2 mb-3' } %>
      </div>
      
    </div>

    <%= form.input :bedroom_count, input_html: { class: 'form-control mt-2 mb-3' } %>
    <%= form.input :bathroom_count, input_html: { class: 'form-control mt-2 mb-3' } %>
    <% component.with_footer do %>
      <%= form.button :button %>
    <% end %>
  <% end %>
<% end %>